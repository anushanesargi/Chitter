<h2>
   <%= flash[:notice] %>
</h2>

<div class="login-page">
  <div class="form">
    <div class="login">
      <div class="login-header">
        <h3>LOGIN</h3>
        <p>Please enter your credentials to login.</p>
      </div>
    </div>
    <form class="login-form" action="/login" method="post">
      <input type="username" name="input_username" placeholder="Username"/>
      <input type="password" name="input_password" placeholder="Password"/>
      <input type="submit" value="Login" />
    </form>
    <form class="login-form" action="/register/new" method="get">
      <p class="message">Not registered?<input type="submit" value="Register" /></p>
    </form>
  </div>
</div>

<style>
  .login-page {
    width: 360px;
    padding: 8% 0 0;
    margin: auto;
